{
  "compilerOptions": {
    "target": "ES2021", // require node >= 12
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "transform": "./src/transformer/index.ts",
        "runtimePackage": "./src/runtime"
      }
    ]
  },
}
